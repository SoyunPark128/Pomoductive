<Page
    x:Class="Pomoductive.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pomoductive.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:qc="using:Ailon.QuickCharts"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid >
        <Grid.Resources>
            
        </Grid.Resources>
        <local:TodoListControl HorizontalAlignment="Left"/>
        <Button  FontSize="55" FontWeight="ExtraBold"
                 Click="TimeCountingStartsButtonClicked" x:Name="PomodoreButtonText"
                 HorizontalAlignment="Center" VerticalAlignment="Bottom"
                 Grid.ColumnSpan="2" Content="Start" 
                 Padding="20,10,20,15" Margin="0,0,0,10"/>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock x:Name="ElapsedMinTxt"/>
            <TextBlock x:Name="min"/>
            <TextBlock x:Name="totalmin"/>
            <TextBlock x:Name="stopwatchElapsed"/>
            <TextBlock Text="{x:Bind ViewModel.SelectedTodo.Name, Mode=TwoWay}"/>
            <TextBlock Text="{x:Bind ViewModel.Stopwatch.IsRunning, Mode=OneWay}"/>
        </StackPanel>
    </Grid>

</Page>
